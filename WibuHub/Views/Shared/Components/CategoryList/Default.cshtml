@model IEnumerable<WibuHub.MVC.ViewModels.CategoryVM>

<table class="table table-hover mt-3 border">
    <thead class="table-dark">
        <tr>
            <th style="width: 10%">Position</th>
            <th style="width: 20%">Name</th>
            <th style="width: 20%">Slug (Đường dẫn)</th>
            <th style="width: 30%">Description</th>
            <th style="width: 20%" class="text-center">Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <span class="badge bg-secondary" style="padding: 8px 12px;">
                            @item.Position
                        </span>
                    </td>
                    <td><strong>@item.Name</strong></td>
                    <td>
                        <span class="text-danger fw-bold">@item.Slug</span>
                    </td>
                    <td>
                        <small class="text-muted">@(item.Description ?? "Không có mô tả")</small>
                    </td>
                    <td class="text-center">
                        <div class="btn-group" role="group">
                            <a asp-action="Edit" asp-route-id="@item.Id"
                               class="btn btn-sm btn-primary mx-1">Sửa</a>

                            <a asp-action="Details" asp-route-id="@item.Id"
                               class="btn btn-sm btn-info text-white mx-1">Chi tiết</a>

                            @* Nút Xóa gọi hàm JS để hiện Modal xác nhận *@
                            <button type="button" onclick="openModalDeleteCategory('@item.Id')"
                                    class="btn btn-sm btn-danger mx-1">
                                Xóa
                            </button>
                        </div>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5" class="text-center">Chưa có danh mục nào được tạo.</td>
            </tr>
        }
    </tbody>
</table>