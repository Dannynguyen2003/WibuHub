@model IEnumerable<WibuHub.MVC.ViewModels.ChapterVM>

<table class="table table-hover mt-3 border">
    <thead class="table-dark">
        <tr>
            <th style="width: 10%">Số chương</th>
            <th style="width: 20%">Tên chương</th>
            <th style="width: 15%">Slug</th>
            <th style="width: 10%">Lượt xem</th>
            <th style="width: 10%">Giá</th>
            <th style="width: 15%">Ngày tạo</th>
            <th style="width: 20%" class="text-center">Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <span class="badge bg-secondary" style="padding: 8px 12px;">
                            @item.ChapterNumber
                        </span>
                    </td>
                    <td><strong>@item.Name</strong></td>
                    <td>
                        <span class="text-danger fw-bold">@item.Slug</span>
                    </td>
                    <td>@item.ViewCount</td>
                    <td>@item.Price.ToString("C")</td>
                    <td>@item.CreatedAt.ToString("dd/MM/yyyy")</td>
                    <td class="text-center">
                        <div class="btn-group" role="group">
                            <a asp-action="Edit" asp-route-id="@item.Id"
                               class="btn btn-sm btn-primary mx-1">Sửa</a>

                            <a asp-action="Details" asp-route-id="@item.Id"
                               class="btn btn-sm btn-info text-white mx-1">Chi tiết</a>

                            <button type="button" onclick="openModalDeleteChapter('@item.Id')"
                                    class="btn btn-sm btn-danger mx-1">
                                Xóa
                            </button>
                        </div>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="7" class="text-center">Chưa có chương nào được tạo.</td>
            </tr>
        }
    </tbody>
</table>
