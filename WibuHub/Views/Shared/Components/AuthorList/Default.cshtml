@model IEnumerable<WibuHub.MVC.ViewModels.AuthorVM>
<table class="table table-hover mt-3 border">
    <thead class="table-dark">
        <tr>
            <th style="width: 20%">ID</th>
            <th style="width: 50%">Tên tác giả</th>
            <th style="width: 30%" class="text-center">Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <small class="text-muted">@item.Id</small>
                    </td>
                    <td><strong>@item.Name</strong></td>
                    <td class="text-center">
                        <div class="btn-group" role="group">
                            <a asp-action="Edit" asp-route-id="@item.Id"
                               class="btn btn-sm btn-primary mx-1">Sửa</a>
                            <a asp-action="Details" asp-route-id="@item.Id"
                               class="btn btn-sm btn-info text-white mx-1">Chi tiết</a>
                            <button type="button" onclick="openModalDeleteAuthor('@item.Id')"
                                    class="btn btn-sm btn-danger mx-1">
                                Xóa
                            </button>
                        </div>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="3" class="text-center">Chưa có tác giả nào được tạo.</td>
            </tr>
        }
    </tbody>
</table>