@* @model WibuHub.ApplicationCore.Entities.Category *@
@model WibuHub.MVC.ViewModels.CategoryVM

@{
    ViewData["Title"] = "Thêm mới Danh mục";
    bool isCreate = Model == null || Model.Id == Guid.Empty;
    string actionString = isCreate ? "Create" : "Edit";
    string buttonString = isCreate ? "Create" : "Update";
}

<div class="container mt-4">
    <h1>Thêm mới Danh mục</h1>
    <hr />

    <div class="row">
        <div class="col-md-6">
            <form asp-action="@actionString">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                @if (!isCreate)
                {
                    <input asp-for="Id" type="hidden" />
                    <input asp-for="Position" type="hidden" />
                }

                @* 1. Tên danh mục *@
                <div class="form-group mb-3">
                    <label asp-for="Name" class="control-label fw-bold">Tên danh mục</label>
                    <input asp-for="Name" class="form-control" placeholder="Ví dụ: Hành động, Ngôn tình..." autofocus />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                @* 2. Mô tả*@
                <div class="form-group mb-3">
                    <label asp-for="Description" class="control-label fw-bold">Mô tả</label>
                    <textarea asp-for="Description" class="form-control" rows="3" placeholder="Mô tả ngắn về danh mục này..."></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                @* 3. Slug (Đường dẫn) *@
                <div class="form-group mb-3">
                    <label asp-for="Slug" class="control-label fw-bold">Đường dẫn (Slug)</label>
                    <input asp-for="Slug" class="form-control" placeholder="tu-dong-sinh-ra-tu-ten" id="txtSlug" />
                    <small class="form-text text-muted">Đây là đường dẫn trên URL (không dấu, gạch ngang).</small>
                    <span asp-validation-for="Slug" class="text-danger"></span>
                </div>

                @* 4. Vị trí sắp xếp (Position)
                <div class="form-group mb-3">
                    <label asp-for="Position" class="control-label fw-bold">Vị trí hiển thị</label>
                    <input asp-for="Position" class="form-control" type="number" min="0" value="0" />
                    <small class="form-text text-muted">Số càng nhỏ hiển thị càng cao.</small>
                    <span asp-validation-for="Position" class="text-danger"></span>
                </div> *@

                @* Buttons *@
                <div class="form-group" style="text-align: center; margin-top: 10px;">
                    <input type="submit" value="@buttonString" class="btn btn-primary" />
                </div>
            </form>
        </div>
        <div id="divCategoryList" class="col-md-8">
            @await Component.InvokeAsync("CategoryList")
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        function deleteCategory(idCategory) {
            let inputToken = document.querySelector("input[name='__RequestVerificationToken']");
            if (!inputToken) {
                console.error("Không tìm thấy Token bảo mật!");
                return;
            }

            $.ajax({
                url: '/Categories/Delete',
                type: 'POST',
                data: {
                    id: idCategory,
                    __RequestVerificationToken: inputToken.value
                },
                success: function (response) {
                    if(response.isOK){
                        closeModal();
                        refreshCategoryList();
                    } else {
                        alert("Xóa thất bại!");
                    }
                },
                error: function() {
                    alert("Có lỗi xảy ra khi kết nối với máy chủ.");
                }
            });
        }

        // Đừng quên hàm này để cập nhật lại danh sách sau khi xóa thành công
        function refreshCategoryList() {
            $.get('/Categories/Reload', function(data) {
                $('#divCategoryList').html(data);
            });
        }
    </script>
    <script>
        // Tự động tạo Slug khi gõ Tên danh mục
        document.getElementById("Name").addEventListener("keyup", function () {
            let name = this.value;
            let slug = generateSlug(name);
            document.getElementById("txtSlug").value = slug;
        });

        function generateSlug(text) {
            return text.toString().toLowerCase()
                .replace(/á|à|ả|ạ|ã|ă|ắ|ằ|ẳ|ặ|ẵ|â|ấ|ầ|ẩ|ậ|ẫ/g, 'a')
                .replace(/é|è|ẻ|ẹ|ẽ|ê|ế|ề|ể|ệ|ễ/g, 'e')
                .replace(/i|í|ì|ỉ|ị|ĩ/g, 'i')
                .replace(/ó|ò|ỏ|ọ|õ|ô|ố|ồ|ổ|ộ|ỗ|ơ|ớ|ờ|ở|ợ|ỡ/g, 'o')
                .replace(/ú|ù|ủ|ụ|ũ|ư|ứ|ừ|ử|ự|ữ/g, 'u')
                .replace(/ý|ỳ|ỷ|ỵ|ỹ/g, 'y')
                .replace(/đ/g, 'd')
                .replace(/\s+/g, '-')           // Thay khoảng trắng bằng -
                .replace(/[^\w\-]+/g, '')       // Loại bỏ ký tự đặc biệt
                .replace(/\-\-+/g, '-')         // Thay nhiều -- bằng 1 -
                .replace(/^-+/, '')              // Cắt - ở đầu
                .replace(/-+$/, '');             // Cắt - ở cuối
        }
    </script>

    <script>
        // openModal();
        function openModalDeleteCategory(idCategory){
            // let inputToken = document.querySelector("input[name='__RequestVerificationToken']");
            $.ajax({
                url: '/Categories/Delete',
                type: 'GET',                     // Hoặc 'GET'
                data: { id: idCategory },            // Dữ liệu gửi lên server
                // contentType: 'application/x-www-form-urlencoded; charset=UTF-8', // Loại dữ liệu gửi lên (default)
                // dataType: 'json',                 // Kiểu dữ liệu nhận về (json, html, text, script)
                beforeSend: function () {
                    // Trước khi gửi request nên làm gì?
                    //=== Thường dùng để hiện thanh loading, hoặc vô hiệu nút nhấn ===//
                    console.log("Sending...");
                },
                success: function (responseHTML) {
                    // Xử lý khi gọi hàm Thành công
                    //=== Lấy PartialView Delete bỏ vào Modal và hiện Modal ===//
                    openModal("Category Delete", responseHTML, "modal-lg");
                },
                error: function (xhr, status, error) {
                    // Lỗi => Dùng để hiển thị thông báo lỗi
                    console.error("Error:", status, error);
                },
                complete: function () {
                    // Luôn gọi dù thành công hay thất bại
                    //=== Thường dùng để tắt thanh loading, hoặc bật lại khả năng click của nút nhấn ===//
                    console.log("Request completed");
                },
                timeout: 10000  // Giới hạn thời gian (ms)
            });
        }

        function deleteCategory(idCategory){
            let inputToken = document.querySelector("input[name='__RequestVerificationToken']");
            $.ajax({
                url: '/Categories/Delete',
                type: 'POST',
                data: { id: idCategory, __RequestVerificationToken: inputToken.value },
                beforeSend: function () {
                    console.log("Sending...");
                },
                success: function (response) {
                    console.log("Success:", {response});
                    if(response.isOK){
                         //=== Đóng Modal lại ===//
                        closeModal();
                        //=== Load lại danh sách Category mới ===//
                        refreshCategoryList();
                    }

                },
                error: function (xhr, status, error) {
                    console.error("Error:", status, error);
                },
                complete: function () {
                    console.log("Request completed");
                },
                timeout: 10000  // Giới hạn thời gian (ms)
            });
        }

        function refreshCategoryList(){
            $.ajax({
                url: '/Categories/Reload',
                type: 'GET',
                // data: { id: idCategory },
                beforeSend: function () {
                    console.log("Sending...");
                },
                success: function (response) {
                    let divCategoryList = document.getElementById("divCategoryList");
                    if(divCategoryList){
                        divCategoryList.innerHTML = response;
                    }

                },
                error: function (xhr, status, error) {
                    console.error("Error:", status, error);
                },
                complete: function () {
                    console.log("Request completed");
                },
                timeout: 10000  // Giới hạn thời gian (ms)
            });
        }
    </script>
}
