@model WibuHub.ApplicationCore.Entities.PaymentMethod

@{
    ViewData["Title"] = "Xóa phương thức thanh toán";
}

<div class="container-fluid px-4">
    <h1 class="mt-4 text-danger">@ViewData["Title"]</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Dashboard</a></li>
        <li class="breadcrumb-item"><a asp-action="Index">Phương thức thanh toán</a></li>
        <li class="breadcrumb-item active">Xóa</li>
    </ol>

    <div class="card border-danger">
        <div class="card-header bg-danger text-white">
            <i class="bi bi-exclamation-triangle me-2"></i>Xác nhận xóa
        </div>
        <div class="card-body">
            <div class="alert alert-warning">
                <i class="bi bi-exclamation-circle me-2"></i>
                <strong>Cảnh báo!</strong> Bạn có chắc chắn muốn xóa phương thức thanh toán này không?
            </div>

            <dl class="row">
                <dt class="col-sm-3">Tên phương thức:</dt>
                <dd class="col-sm-9"><strong>@Model.Name</strong></dd>

                <dt class="col-sm-3">Mã:</dt>
                <dd class="col-sm-9"><code>@Model.Code</code></dd>

                <dt class="col-sm-3">Trạng thái:</dt>
                <dd class="col-sm-9">
                    @if (Model.IsActive)
                    {
                        <span class="badge bg-success">Đang kích hoạt</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Vô hiệu hóa</span>
                    }
                </dd>

                <dt class="col-sm-3">Thứ tự hiển thị:</dt>
                <dd class="col-sm-9">@Model.DisplayOrder</dd>

                @if (!string.IsNullOrEmpty(Model.LogoUrl))
                {
                    <dt class="col-sm-3">Logo:</dt>
                    <dd class="col-sm-9">
                        <img src="@Model.LogoUrl" alt="@Model.Name" style="height: 40px;">
                    </dd>
                }

                @if (!string.IsNullOrEmpty(Model.Description))
                {
                    <dt class="col-sm-3">Mô tả:</dt>
                    <dd class="col-sm-9">@Model.Description</dd>
                }
            </dl>

            <div class="alert alert-info mt-4">
                <i class="bi bi-info-circle me-2"></i>
                <strong>Lưu ý:</strong> Nếu phương thức này đã có giao dịch sử dụng, hệ thống sẽ không cho phép xóa. 
                Trong trường hợp đó, bạn nên vô hiệu hóa thay vì xóa.
            </div>

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="Id" />
                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left me-1"></i>Quay lại
                    </a>
                    <button type="submit" class="btn btn-danger" onclick="return confirm('Bạn có chắc chắn muốn xóa?')">
                        <i class="bi bi-trash me-1"></i>Xác nhận xóa
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
