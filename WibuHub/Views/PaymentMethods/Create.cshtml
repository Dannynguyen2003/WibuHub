@model WibuHub.ApplicationCore.Entities.PaymentMethod

@{
    ViewData["Title"] = "Thêm phương thức thanh toán";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">@ViewData["Title"]</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Dashboard</a></li>
        <li class="breadcrumb-item"><a asp-action="Index">Phương thức thanh toán</a></li>
        <li class="breadcrumb-item active">Thêm mới</li>
    </ol>

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <i class="bi bi-plus-circle me-2"></i>Thông tin phương thức thanh toán
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label">Tên phương thức <span class="text-danger">*</span></label>
                            <input asp-for="Name" class="form-control" placeholder="VD: Ví MoMo, VNPay, Chuyển khoản ngân hàng" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Code" class="form-label">Mã phương thức <span class="text-danger">*</span></label>
                            <input asp-for="Code" class="form-control" placeholder="VD: MOMO, VNPAY, BANK" style="text-transform: uppercase;" />
                            <div class="form-text">Mã định danh duy nhất, nên viết hoa và không dấu</div>
                            <span asp-validation-for="Code" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="LogoUrl" class="form-label">URL Logo</label>
                            <input asp-for="LogoUrl" class="form-control" placeholder="/images/momo.png hoặc https://..." />
                            <div class="form-text">Đường dẫn tới logo phương thức thanh toán</div>
                            <span asp-validation-for="LogoUrl" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="DisplayOrder" class="form-label">Thứ tự hiển thị</label>
                                <input asp-for="DisplayOrder" type="number" class="form-control" value="0" />
                                <div class="form-text">Số nhỏ hơn hiển thị trước</div>
                                <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label class="form-label">Trạng thái</label>
                                <div class="form-check form-switch">
                                    <input asp-for="IsActive" class="form-check-input" type="checkbox" checked />
                                    <label asp-for="IsActive" class="form-check-label">Kích hoạt ngay</label>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">Mô tả</label>
                            <textarea asp-for="Description" class="form-control" rows="3" placeholder="Mô tả ngắn gọn về phương thức thanh toán"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-x-circle me-1"></i>Hủy
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle me-1"></i>Lưu
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <i class="bi bi-lightbulb me-2"></i>Gợi ý
                </div>
                <div class="card-body">
                    <h6>Các phương thức phổ biến:</h6>
                    <ul class="small">
                        <li><strong>MOMO</strong> - Ví MoMo</li>
                        <li><strong>VNPAY</strong> - VNPay</li>
                        <li><strong>ZALOPAY</strong> - ZaloPay</li>
                        <li><strong>BANK</strong> - Chuyển khoản ngân hàng</li>
                        <li><strong>COD</strong> - Thanh toán khi nhận hàng</li>
                        <li><strong>VISA</strong> - Thẻ Visa/MasterCard</li>
                    </ul>
                    
                    <hr>
                    
                    <h6>Lưu ý bảo mật:</h6>
                    <p class="small text-muted">
                        Các thông tin nhạy cảm như <code>SecretKey</code>, <code>AccessKey</code> 
                        của cổng thanh toán <strong>KHÔNG NÊN</strong> lưu trong database. 
                        Hãy cấu hình trong <code>appsettings.json</code> hoặc biến môi trường.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        // Auto uppercase code input
        document.querySelector('input[name="Code"]').addEventListener('input', function(e) {
            e.target.value = e.target.value.toUpperCase();
        });
    </script>
}
