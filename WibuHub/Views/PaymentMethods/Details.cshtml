@model WibuHub.ApplicationCore.Entities.PaymentMethod

@{
    ViewData["Title"] = "Chi tiết phương thức thanh toán";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">@ViewData["Title"]</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Dashboard</a></li>
        <li class="breadcrumb-item"><a asp-action="Index">Phương thức thanh toán</a></li>
        <li class="breadcrumb-item active">Chi tiết</li>
    </ol>

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <i class="bi bi-info-circle me-2"></i>Thông tin chi tiết
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">ID:</dt>
                        <dd class="col-sm-9">@Model.Id</dd>

                        <dt class="col-sm-3">Tên phương thức:</dt>
                        <dd class="col-sm-9"><strong>@Model.Name</strong></dd>

                        <dt class="col-sm-3">Mã:</dt>
                        <dd class="col-sm-9"><code>@Model.Code</code></dd>

                        <dt class="col-sm-3">Trạng thái:</dt>
                        <dd class="col-sm-9">
                            @if (Model.IsActive)
                            {
                                <span class="badge bg-success">
                                    <i class="bi bi-check-circle me-1"></i>Đang kích hoạt
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">
                                    <i class="bi bi-x-circle me-1"></i>Vô hiệu hóa
                                </span>
                            }
                        </dd>

                        <dt class="col-sm-3">Thứ tự hiển thị:</dt>
                        <dd class="col-sm-9">@Model.DisplayOrder</dd>

                        @if (!string.IsNullOrEmpty(Model.LogoUrl))
                        {
                            <dt class="col-sm-3">Logo:</dt>
                            <dd class="col-sm-9">
                                <img src="@Model.LogoUrl" alt="@Model.Name" class="img-thumbnail" style="max-height: 100px;">
                                <br>
                                <small class="text-muted">@Model.LogoUrl</small>
                            </dd>
                        }

                        @if (!string.IsNullOrEmpty(Model.Description))
                        {
                            <dt class="col-sm-3">Mô tả:</dt>
                            <dd class="col-sm-9">@Model.Description</dd>
                        }
                    </dl>

                    <hr>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left me-1"></i>Quay lại
                        </a>
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                            <i class="bi bi-pencil me-1"></i>Chỉnh sửa
                        </a>
                        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                            <i class="bi bi-trash me-1"></i>Xóa
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <i class="bi bi-gear me-2"></i>Cấu hình
                </div>
                <div class="card-body">
                    <p class="small text-muted">
                        Phương thức thanh toán này @(Model.IsActive ? "đang được kích hoạt" : "đã bị vô hiệu hóa")
                        và @(Model.IsActive ? "người dùng có thể" : "người dùng không thể") chọn khi thanh toán.
                    </p>

                    @if (Model.IsActive)
                    {
                        <div class="alert alert-success small mb-0">
                            <i class="bi bi-check-circle me-1"></i>
                            Khách hàng có thể sử dụng phương thức này
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-warning small mb-0">
                            <i class="bi bi-exclamation-triangle me-1"></i>
                            Phương thức này không hiển thị cho khách hàng
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
