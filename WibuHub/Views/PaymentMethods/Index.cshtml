@model IEnumerable<WibuHub.ApplicationCore.Entities.PaymentMethod>

@{
    ViewData["Title"] = "Quản lý phương thức thanh toán";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">@ViewData["Title"]</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Dashboard</a></li>
        <li class="breadcrumb-item active">Phương thức thanh toán</li>
    </ol>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i>@TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card mb-4">
        <div class="card-header">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <i class="bi bi-credit-card me-2"></i>Danh sách phương thức thanh toán
                </div>
                <a asp-action="Create" class="btn btn-primary btn-sm">
                    <i class="bi bi-plus-circle me-1"></i>Thêm mới
                </a>
            </div>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Logo</th>
                                <th>Tên phương thức</th>
                                <th>Mã</th>
                                <th>Thứ tự</th>
                                <th>Trạng thái</th>
                                <th>Mô tả</th>
                                <th class="text-center">Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @if (!string.IsNullOrEmpty(item.LogoUrl))
                                        {
                                            <img src="@item.LogoUrl" alt="@item.Name" style="height: 30px; object-fit: contain;">
                                        }
                                        else
                                        {
                                            <i class="bi bi-credit-card fs-4 text-muted"></i>
                                        }
                                    </td>
                                    <td class="fw-bold">@item.Name</td>
                                    <td><code>@item.Code</code></td>
                                    <td>@item.DisplayOrder</td>
                                    <td>
                                        <form asp-action="ToggleActive" asp-route-id="@item.Id" method="post" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            @if (item.IsActive)
                                            {
                                                <button type="submit" class="btn btn-success btn-sm" onclick="return confirm('Vô hiệu hóa phương thức này?')">
                                                    <i class="bi bi-check-circle"></i> Đang kích hoạt
                                                </button>
                                            }
                                            else
                                            {
                                                <button type="submit" class="btn btn-secondary btn-sm" onclick="return confirm('Kích hoạt phương thức này?')">
                                                    <i class="bi bi-x-circle"></i> Vô hiệu hóa
                                                </button>
                                            }
                                        </form>
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(item.Description))
                                        {
                                            <small class="text-muted">@item.Description</small>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group" role="group">
                                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary" title="Sửa">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info" title="Chi tiết">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger" title="Xóa">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-credit-card-2-front fs-1 text-muted"></i>
                    <p class="mt-3 text-muted">Chưa có phương thức thanh toán nào</p>
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="bi bi-plus-circle me-1"></i>Thêm phương thức đầu tiên
                    </a>
                </div>
            }
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <h5 class="card-title"><i class="bi bi-info-circle me-2"></i>Hướng dẫn</h5>
            <ul>
                <li><strong>Kích hoạt/Vô hiệu hóa:</strong> Admin có thể bật/tắt các phương thức thanh toán. Chỉ những phương thức đang kích hoạt mới hiển thị cho khách hàng.</li>
                <li><strong>Thứ tự hiển thị:</strong> Phương thức có số thứ tự nhỏ hơn sẽ hiển thị trước.</li>
                <li><strong>Bảo mật:</strong> Các thông tin nhạy cảm như SecretKey, AccessKey nên cấu hình trong appsettings.json hoặc biến môi trường, không lưu trong database.</li>
                <li><strong>Xóa phương thức:</strong> Không thể xóa phương thức đã có giao dịch sử dụng.</li>
            </ul>
        </div>
    </div>
</div>

<style>
    .btn-group .btn {
        padding: 0.25rem 0.5rem;
    }
</style>
