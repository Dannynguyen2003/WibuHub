@model IEnumerable<WibuHub.ApplicationCore.Entities.Notification>

@{
    ViewData["Title"] = "Quản lý Thông báo";
}

<div class="container-fluid">
    <h2>@ViewData["Title"]</h2>

    <div class="card">
        <div class="card-body">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Người nhận</th>
                        <th>Tiêu đề</th>
                        <th>Nội dung</th>
                        <th>Đã đọc</th>
                        <th>Ngày tạo</th>
                        <th style="width: 150px;">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.UserId</td>
                            <td>@item.Title</td>
                            <td>@(item.Message?.Length > 50 ? item.Message.Substring(0, 50) + "..." : item.Message)</td>
                            <td>
                                @if (item.IsRead)
                                {
                                    <span class="badge bg-success">Đã đọc</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Chưa đọc</span>
                                }
                            </td>
                            <td>@item.CreateDate.ToString("dd/MM/yyyy HH:mm")</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
