@model WibuHub.MVC.ViewModels.CategoryVM

@{
    ViewData["Title"] = Model.Id == Guid.Empty ? "Thêm danh mục" : "Chỉnh sửa danh mục";
}

<div class="container">
    <h2>@ViewData["Title"]</h2>
    <hr />
    
    <div class="row">
        <div class="col-md-6">
            <form asp-action="@(Model.Id == Guid.Empty ? "Create" : "Edit")">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                
                @if (Model.Id != Guid.Empty)
                {
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="Position" />
                }
                
                <div class="form-group mb-3">
                    <label asp-for="Name" class="control-label">Tên danh mục</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                
                <div class="form-group mb-3">
                    <label asp-for="Description" class="control-label">Mô tả</label>
                    <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">@(Model.Id == Guid.Empty ? "Lưu" : "Cập nhật")</button>
                    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
