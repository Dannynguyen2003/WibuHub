@model IEnumerable<WibuHub.ApplicationCore.Entities.Comment>

@{
    ViewData["Title"] = "Quản lý Bình luận";
}

<div class="container-fluid">
    <h2>@ViewData["Title"]</h2>

    <div class="card">
        <div class="card-body">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Truyện</th>
                        <th>Chương</th>
                        <th>Nội dung</th>
                        <th>Ngày tạo</th>
                        <th>Lượt thích</th>
                        <th style="width: 150px;">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Story?.Title</td>
                            <td>@(item.Chapter?.Name ?? "Chung")</td>
                            <td>@(item.Content.Length > 50 ? item.Content.Substring(0, 50) + "..." : item.Content)</td>
                            <td>@item.CreateDate.ToString("dd/MM/yyyy HH:mm")</td>
                            <td>@item.LikeCount</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
