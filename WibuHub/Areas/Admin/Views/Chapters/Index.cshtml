@model IEnumerable<WibuHub.ApplicationCore.Entities.Chapter>

@{
    ViewData["Title"] = "Quản lý Chương";
    var storyId = ViewData["StoryId"] as Guid?;
    var storyTitle = ViewData["StoryTitle"] as string;
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>
            Quản lý Chương
            @if (!string.IsNullOrEmpty(storyTitle))
            {
                <small class="text-muted">- @storyTitle</small>
            }
        </h2>
        <a asp-action="Create" asp-route-storyId="@storyId" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Thêm chương mới
        </a>
    </div>

    <div class="card">
        <div class="card-body">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Truyện</th>
                        <th>Tên chương</th>
                        <th>Số chương</th>
                        <th>Lượt xem</th>
                        <th>Giá</th>
                        <th>Ngày tạo</th>
                        <th style="width: 200px;">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Story?.Title</td>
                            <td>@item.Name</td>
                            <td>@item.Number</td>
                            <td>@item.ViewCount</td>
                            <td>@item.Price.ToString("N0") VNĐ</td>
                            <td>@item.CreateDate.ToString("dd/MM/yyyy")</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
