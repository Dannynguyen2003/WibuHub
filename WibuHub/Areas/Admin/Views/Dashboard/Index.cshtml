@{
    ViewData["Title"] = "Dashboard";
}

<div class="dashboard">
    <div class="page-header">
        <h1 class="page-title">Dashboard</h1>
        <p class="page-subtitle">Welcome to WibuHub Admin Panel</p>
    </div>

    <!-- Statistics Cards -->
    <div class="row g-3 mb-4">
        <div class="col-xl-3 col-md-6">
            <div class="stat-card stat-card-primary">
                <div class="stat-card-icon">
                    <i class="fas fa-book"></i>
                </div>
                <div class="stat-card-content">
                    <h3 class="stat-card-number">1,234</h3>
                    <p class="stat-card-label">Total Stories</p>
                </div>
            </div>
        </div>
        
        <div class="col-xl-3 col-md-6">
            <div class="stat-card stat-card-success">
                <div class="stat-card-icon">
                    <i class="fas fa-users"></i>
                </div>
                <div class="stat-card-content">
                    <h3 class="stat-card-number">5,678</h3>
                    <p class="stat-card-label">Total Users</p>
                </div>
            </div>
        </div>
        
        <div class="col-xl-3 col-md-6">
            <div class="stat-card stat-card-warning">
                <div class="stat-card-icon">
                    <i class="fas fa-file-alt"></i>
                </div>
                <div class="stat-card-content">
                    <h3 class="stat-card-number">23,456</h3>
                    <p class="stat-card-label">Total Chapters</p>
                </div>
            </div>
        </div>
        
        <div class="col-xl-3 col-md-6">
            <div class="stat-card stat-card-danger">
                <div class="stat-card-icon">
                    <i class="fas fa-comments"></i>
                </div>
                <div class="stat-card-content">
                    <h3 class="stat-card-number">8,901</h3>
                    <p class="stat-card-label">Total Comments</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Activity and Quick Actions -->
    <div class="row g-3">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Recent Stories</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Title</th>
                                    <th>Author</th>
                                    <th>Category</th>
                                    <th>Status</th>
                                    <th>Date</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>Sample Story 1</td>
                                    <td>Author Name 1</td>
                                    <td><span class="badge bg-primary">Fantasy</span></td>
                                    <td><span class="badge bg-success">Active</span></td>
                                    <td>2025-01-30</td>
                                </tr>
                                <tr>
                                    <td>Sample Story 2</td>
                                    <td>Author Name 2</td>
                                    <td><span class="badge bg-info">Romance</span></td>
                                    <td><span class="badge bg-success">Active</span></td>
                                    <td>2025-01-29</td>
                                </tr>
                                <tr>
                                    <td>Sample Story 3</td>
                                    <td>Author Name 3</td>
                                    <td><span class="badge bg-warning">Action</span></td>
                                    <td><span class="badge bg-secondary">Draft</span></td>
                                    <td>2025-01-28</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-lg-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Quick Actions</h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a asp-area="" asp-controller="Stories" asp-action="Create" class="btn btn-primary">
                            <i class="fas fa-plus"></i> Add New Story
                        </a>
                        <a asp-area="" asp-controller="Categories" asp-action="Create" class="btn btn-info">
                            <i class="fas fa-plus"></i> Add Category
                        </a>
                        <a asp-area="" asp-controller="Authors" asp-action="Create" class="btn btn-success">
                            <i class="fas fa-plus"></i> Add Author
                        </a>
                        <a asp-area="" asp-controller="User" asp-action="Index" class="btn btn-warning">
                            <i class="fas fa-users"></i> Manage Users
                        </a>
                    </div>
                </div>
            </div>
            
            <div class="card mt-3">
                <div class="card-header">
                    <h5 class="card-title mb-0">System Status</h5>
                </div>
                <div class="card-body">
                    <div class="status-item">
                        <span class="status-label">Server Status</span>
                        <span class="badge bg-success">Online</span>
                    </div>
                    <div class="status-item">
                        <span class="status-label">Database</span>
                        <span class="badge bg-success">Connected</span>
                    </div>
                    <div class="status-item">
                        <span class="status-label">Storage</span>
                        <span class="badge bg-warning">75% Used</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
