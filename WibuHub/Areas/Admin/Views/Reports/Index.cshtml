@model IEnumerable<WibuHub.ApplicationCore.Entities.Report>

@{
    ViewData["Title"] = "Quản lý Báo cáo";
}

<div class="container-fluid">
    <h2>@ViewData["Title"]</h2>

    <div class="card">
        <div class="card-body">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Truyện</th>
                        <th>Nội dung</th>
                        <th>Trạng thái</th>
                        <th>Ngày tạo</th>
                        <th style="width: 150px;">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Story?.Title</td>
                            <td>@item.Content</td>
                            <td>
                                @switch(item.Status)
                                {
                                    case 0: <span class="badge bg-primary">Mới</span>; break;
                                    case 1: <span class="badge bg-success">Đã fix</span>; break;
                                    case 2: <span class="badge bg-secondary">Bỏ qua</span>; break;
                                }
                            </td>
                            <td>@item.CreateDate.ToString("dd/MM/yyyy HH:mm")</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
